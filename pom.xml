    <modelVersion>4.0.0</modelVersion>

    <groupId>client-server</groupId>
    <artifactId>application</artifactId>
    <version>1.0</version>
    <name>VT_labs_1</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <junit.version>5.8.2</junit.version>
    </properties>

    <!-- Определение профилей -->
    <profiles>
        <!-- Профиль 1 -->
        <profile>
            <id>client</id>
            <properties>
                <mainClass>com.example.vt_labs_1.App</mainClass>
            </properties>
        </profile>

        <!-- Профиль 2 -->
        <profile>
            <id>server</id>
            <properties>
